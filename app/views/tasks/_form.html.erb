<%= turbo_frame_tag dom_id(task), tag: :li, class: 'list-group-item border-0 py-2' do %>
  <%= form_with model: [project, task], method: :patch,
                data: { turbo_frame: dom_id(task) } do |f| %>
    <div class="d-flex justify-content-between align-items-center">
      <%= f.text_field :name, class: 'form-control me-2' %>
      <%= f.submit 'Save', class: 'btn btn-primary btn-sm' %>
    </div>
  <% end %>
<% end %>
